#############
# Autostart #
#############

exec ~/.config/feh/fehbg &

# Hooks

addhook switchwin info [%n] %t

##########
# Config #
##########

gravity c
set border 2
set wingravity c
set bargravity c
set resizeunit 20
set transgravity c
set maxsizegravity c
set startupmessage 0
set fgcolor "#ffffff"
set bgcolor "#000000"
set fwcolor "#d0021b"
set bwcolor "#000000"
set winfmt [%n] %s %t
set font "Tamsyn:size=10"

###############
# Keybindings #
###############

escape C-period

alias browser exec firefox
bind slash browser
bind C-slash browser

definekey top s-equal exec xbacklight -dec 10%
definekey top s-plus exec xbacklight -inc 10%

definekey top s-Down exec sndioctl output.level=-0.1
definekey top s-Up exec sndioctl output.level=+0.1
definekey top s-m exec sndioctl output.mute=!

definekey top s-S-Down exec sndioctl input.level=-0.1
definekey top s-S-Up exec sndioctl input.level=+0.1
definekey top s-M exec sndioctl input.mute=!

definekey top s-Left exec playerctl previous
definekey top s-Right exec playerctl next
definekey top s-space exec playerctl play-pause

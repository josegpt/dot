# ufetch-openbsd - tiny system info for openbsd

_packages()
{
    count=$(pkg_info | wc -l)
    echo ${count##[:space:]*}
}

_uptime()
{
    up=$(uptime)
    up=${up##*up }
    echo ${up%%,*}
}

_shell()
{
    echo ${SHELL##*/}
}

echo "       _____
     \-     -/    HOST:      $USER@$(hostname)
  \_/         \   OS:        $(uname -sr)
  |        O O |  KERNEL:    $(uname -v)
  |_  <   )  3 )  UPTIME:    $(_uptime)
  / \         /   PACKAGES:  $(_packages)
     /-_____-\    SHELL:     $(_shell)
"

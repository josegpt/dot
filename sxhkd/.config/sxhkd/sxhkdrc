#  -*- mode: shell-script; -*-
# hotkeys
#

super + Return
  emacsclient -a "" -c -e "(eshell)"

super + e
  emacsclient -a "" -c

XF86Audio{Play,Stop,Next,Prev}
  playerctl {play-pause,stop,next,previous}

XF86Audio{Mute,LowerVolume,RaiseVolume}
  amixer set Master {toggle,10%-,10%+}

alt + XF86Audio{Mute,LowerVolume,RaiseVolume}
  amixer set Capture {toggle,10%-,10%+}

XF86MonBrightness{Down,Up}
  xbacklight -{dec,inc} 20%

#
# wm hotkeys
#

super + w ; {r,q,k,p}
  {bspc wm -r,bspc quit,pkill -USR1 -x sxhkd,pkill -USR1 -x polybar}

super + c
  bspc node -s biggest.window

super + {_,shift + }q
  bspc node -{c,k}

super + m
  bspc desktop -l next

super + {p,n}
  bspc node -f {prev,next}.local.!hidden.window

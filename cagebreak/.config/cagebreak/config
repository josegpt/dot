# General settings

exec emacsclient -a '' -c

workspaces 1
background 0 0 0

escape L-e

# Root

bind 1 only
bind 2 hsplit
bind 3 vsplit
bind q quit
bind o focus
bind w exec firefox
bind t time
bind g abort
bind L-g abort
bind L-p prevscreen
bind L-n nextscreen
bind B exchangeleft
bind N exchangedown
bind P exchangeup
bind F exchangeright
bind b focusleft
bind n focusdown
bind p focusup
bind f focusright
bind e exec emacsclient -a '' -c
bind L-e exec emacsclient -a '' -c
bind r setmode resize
definekey resize b resizeleft
definekey resize n resizedown
definekey resize p resizeup
definekey resize f resizeright
definekey resize g setmode top

# Powersettings

definemode ps
bind a setmode ps
definekey ps r exec doas reboot
definekey ps p exec doas poweroff

# Top

definekey top L-n next
definekey top L-p prev
definekey top L-q close
definekey top L-Return exec emacsclient -a '' -c -e '(eshell)'

## Workspaces

# definekey top A-1 workspace 1
# definekey top A-2 workspace 2

# definekey top C-1 movetoworkspace 1
# definekey top C-2 movetoworkspace 2

# definekey top XF86_Switch_VT_1 switchvt 1
# definekey top XF86_Switch_VT_2 switchvt 2

## XF86

definekey top XF86AudioMute exec amixer set Master toggle
definekey top XF86AudioRaiseVolume exec amixer set Master 10%+
definekey top XF86AudioLowerVolume exec amixer set Master 10%-
definekey top A-XF86AudioMute exec amixer set Capture toggle
definekey top A-XF86AudioRaiseVolume exec amixer set Capture 10%+
definekey top A-XF86AudioLowerVolume exec amixer set Capture 10%-
definekey top XF86MonBrightnessUp exec light -A 10
definekey top XF86MonBrightnessDown exec light -U 10

# Output

#output eDP-1 pos 0 0 res 1366x768 rate 60
#output eDP-1 disable
#output eDP-1 enable

# Input

#input 1234:0:Device_Ident click_method clickfinger
#input type:pointer scroll_method two_finger
#input * calibration_matrix 1 2 3 4 5 6

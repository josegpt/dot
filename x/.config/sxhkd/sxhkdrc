#  -*- mode: shell-script; -*-
# hotkeys
#

super + e
  emacsclient -a "" -c

super + w
  chrome

super + {_,shift +}{m,Down,Up}
  sndioctl {output,input}.{mute=!,level=-0.1,level=+0.1}

super + {equal,plus}
  xbacklight -{dec,inc} 10%

super + apostrophe
  emacsclient -a "" -e "(modus-themes-toggle)"

super + semicolon
  feh --randomize --bg-scale ~/.config/wallpapers/*

#
# wm hotkeys
#

super + Escape ; {r,q,k}
  {bspc wm -r,bspc quit,pkill -USR1 -x sxhkd}

super + s
  bspc node -s biggest.window

super + {_,shift + }q
  bspc node -{c,k}

super + t
  bspc desktop -l next

super + {p,n}
  bspc node -f {prev,next}.local.!hidden.window

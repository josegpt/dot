#  -*- mode: shell-script; -*-
# hotkeys
#

super + e
  emacsclient -a "" -c

super + w
  firefox

super + {space,left,right}
  playerctl {play-pause,previous,next}

super + {_,shift +}{m,down,up}
  amixer set {Master,Capture} {toggle,10%-,10%+}

super + {equal,plus}
  xbacklight -{dec,inc} 10%

super + semicolon
  feh --randomize --bg-scale ~/.config/wallpapers/*

#
# wm hotkeys
#

super + Escape ; {r,q,k}
  {bspc wm -r,bspc quit,pkill -USR1 -x sxhkd}

super + t
  bspc node -s biggest.window

super + {_,shift + }q
  bspc node -{c,k}

super + s
  bspc desktop -l next

super + {p,n}
  bspc node -f {prev,next}.local.!hidden.window

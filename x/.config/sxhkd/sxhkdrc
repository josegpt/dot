#  -*- mode: shell-script; -*-

super + e
  emacsclient -a "" -c

super + w
  firefox

super + {_,shift +}{m,Down,Up}
  amixer set {Master,Capture} {toggle, 10%-, 10%+}

super + {equal,plus}
  light -{U,A} 10

#
# wm hotkeys
#

super + Escape ; {r,q,k}
  {bspc wm -r,bspc quit,pkill -USR1 -x sxhkd}

super + s
  bspc node -s biggest.window

super + {_,shift + }q
  bspc node -{c,k}

super + t
  bspc desktop -l next

super + {p,n}
  bspc node -f {prev,next}.local.!hidden.window

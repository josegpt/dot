######################
# General settings an key bindings
######################

workspaces 1
background 0 0 0

escape L-t

bind g abort
bind n nextscreen
bind p prevscreen
bind w exec firefox
bind a time
bind i show_info

######################
# Bind Function keys
######################
definekey top L-p prev
definekey top L-n next
definekey top L-Q quit
definekey top L-q close
definekey top L-e exec emacsclient -a "" -c
definekey top L-S-Down exec amixer set Capture 10%-
definekey top L-S-Up exec amixer set Capture 10%+
definekey top L-M exec amixer set Capture toggle
definekey top L-Down exec amixer set Master 10%-
definekey top L-Up exec amixer set Master 10%+
definekey top L-m exec amixer set Master toggle
definekey top L-equal exec light -U 10
definekey top L-plus exec light -A 10


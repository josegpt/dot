(defgroup pt-common ()
  "General Functions for my dotfiles."
  :group 'editing)

(defun pt-common-print-startup-message ()
  (message "---> Emacs loaded in %s with %d garbage collections."
           (format "%.2f seconds"
                   (float-time
                    (time-subtract after-init-time before-init-time)))
           gcs-done))


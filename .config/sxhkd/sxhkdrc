#
# wm independent hotkeys
#

# make sxhkd reload its configuration files:
mod4 + q
 pkill -USR1 -x sxhkd

# program launcher
mod4 + r
 dmenu_run

# browser
mod4 + {_,shift +,alt +}j
 firefox --{new-tab,new-window,private-window} https://duckduckgo.com

# brightness
XF86MonBrightness{Down,Up}
 xbacklight -{dec,inc} 10%

# volume
XF86Audio{Lower,Raise}Volume
 pactl -- set-sink-volume 0 {-,+}10%

XF86Audio{_,Mic}Mute
 pactl -- set-{sink-mute 0,source-mute 1} toggle

# emacs
mod4 + Return
 emacsclient -c -e "(eshell)"

mod4 + e
 emacs

#
# bspwm hotkeys
#

# quit/restart bspwm
mod4 + w ; {q,r}
 bspc {quit,wm -r}

# close and kill
mod4 + {_,shift +}k
 bspc node -{c,k}

#
# state/flags
#

# set the window state
mod4 + {t,shift + t,g,space}
 bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
mod4 + o
 bspc node -f prev.local.window

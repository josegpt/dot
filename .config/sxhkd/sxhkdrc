#  -*- mode: shell-script; -*-
# hotkeys
#

super + Return
  emacsclient -c -e "(eshell)"

super + e
  emacsclient -c

super + r
  emacsclient -c -e "(elfeed)"

super + Escape
  pkill -USR1 -x sxhkd

super + {l,d}
  pgrep -x emacs && emacsclient -e "(load-theme '{modus-operandi,modus-vivendi} t)"

XF86Audio{Play,Stop,Next,Prev}
  playerctl {play-pause,stop,next,previous}

XF86Audio{Lower,Raise}Volume
  amixer set Master 10%{-,+}

super + XF86Audio{Lower,Raise}Volume
  amixer set Capture 10%{-,+}

super + XF86AudioMute
  amixer set Capture toggle

XF86Audio{_,Mic}Mute
  amixer set {Master,Capture} toggle

XF86MonBrightness{Down,Up}
  xbacklight -{dec,inc} 10%

#
# wm hotkeys
#

super + {_,shift +}q
  bspc {wm -r,quit}

super + {_,shift + }k
  bspc node -{c,k}

super + m
  bspc desktop -l next

super + {b,f}
  bspc node -f {prev,next}.local.!hidden.window

super + {p,n}
  bspc desktop -f {prev,next}.local

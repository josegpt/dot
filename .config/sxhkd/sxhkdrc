#  -*- mode: shell-script; -*-
# hotkeys
#

super + Return
  emacsclient -a "" -c -e "(eshell)"

super + e
  pgrep -f emacsclient && emacsclient -e "(x-focus-frame nil)" || emacsclient -a "" -c

super + shift + e
  emacsclient -a "" -c

super + w ; {r,q,k}
  {bspc wm -r,bspc quit,pkill -USR1 -x sxhkd}

XF86Audio{Play,Stop,Next,Prev}
  playerctl {play-pause,stop,next,previous}

XF86Audio{Lower,Raise}Volume
  amixer set Master 10%{-,+}

super + XF86Audio{Lower,Raise}Volume
  amixer set Capture 10%{-,+}

super + XF86AudioMute
  amixer set Capture toggle

XF86Audio{_,Mic}Mute
  amixer set {Master,Capture} toggle

XF86MonBrightness{Down,Up}
  xbacklight -{dec,inc} 10%

#
# wm hotkeys
#

super + {_,shift + }k
  bspc node -{c,k}

super + m
  bspc desktop -l next

super + {b,f}
  bspc node -f {prev,next}.local.!hidden.window

super + {p,n}
  bspc desktop -f {prev,next}.local

super + Return
	xterm

super + b
	firefox

super + {_,shift + }equal
	xbacklight -{dec,inc} 10

super + {_,shift + }m
	sndioctl {output,input}.mute=!

super + {_,shift + }{Down,Up}
	sndioctl {output,input}.level={-,+}0.1

super + alt + {q,r}
	bspc {quit,wm -r}

super + w ; {q,r,k}
	{bspc quit,bspc wm -r,pkill -USR1 -x sxhkd}

super + {_,shift + }q
	bspc node -{c,k}

super + {j,k}
	bspc node -f {prev,next}.local.!hidden.window

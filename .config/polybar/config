[module/time]
type = internal/date
date = %I:%M%P

[module/date]
type = internal/date
date = (%A) %b %d, %Y

[module/cpu]
type = internal/cpu

format = <label>
label = CPU %percentage%%

[module/memory]
type = internal/memory

format = <label>
label = RAM %gb_used%/%gb_free%

[module/temperature]
type = internal/temperature
thermal-zone = 0

base-temperature = 20
warn-temperature = 60
label = TEMP %temperature-c%
format = <label>
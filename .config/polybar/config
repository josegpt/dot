[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = #000000
foreground = #ffffff

[bar/panel]
width = 100%
height = 20
offset-x = 0
offset-y = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 1
padding-right = 1

module-margin = 2

font-0 = "Iosevka:size=10;2"

modules-left = 
modules-right = volume backlight temp cpu memory battery date

tray-position = left
tray-padding = 2
tray-maxsize = 28

cursor-click = pointer
cursor-scroll = ns-resize

[module/cpu]
type = internal/cpu
interval = 2
label = CPU %percentage:2%%

[module/memory]
type = internal/memory

label = RAM %gb_used%/%gb_free%

interval = 1

[module/date]
type = internal/date
interval = 5

date = "%a %B %d, %Y"

time = "%I:%M%P"

format-prefix-foreground = ${colors.foreground}

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 99
time-format = %-I:%M

label-charging = %percentage%% / %time%
format-charging = <label-charging>

label-discharging = %percentage%% / %time%
format-discharging = <label-discharging>

format-full = <label-full>

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>

label = BL %percentage%%

[module/volume]
type = internal/pulseaudio
format-volume = <label-volume>
label-muted = muted
label-volume = VOLUME %percentage%%

[module/temp]
type = internal/temperature
warn-temperature = 60

format = <label>
format-warn = <label-warn>

label = %temperature-f%
label-warn = %temperature-f%!

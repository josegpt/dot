#! /bin/sh

. ~/.config/colors/colors

# Initializing
sxhkd &
compton &

# Monitors
bspc monitor -d I II III IV 

# Configs
bspc config border_width     	         4
bspc config window_gap                20

bspc config split_ratio             0.50
bspc config borderless_monocle      true
bspc config gapless_monocle         true
bspc config focus_follows_pointer   true

# Styling
bspc config normal_border_color     $SECONDARY_COLOR
bspc config active_border_color     $PRIMARY_COLOR
bspc config focused_border_color    $PRIMARY_COLOR
bspc config presel_feedback_color   $PRIMARY_COLOR_DARK
bspc config urgent_border_color     $PRIMARY_COLOR_LIGHT

# bspc rule -a qutebrowser state=floating

# Lemonbar
~/.config/lemonbar/lemonbar | lemonbar -g x22 -B $SECONDARY_COLOR -F $PRIMARY_COLOR -p

